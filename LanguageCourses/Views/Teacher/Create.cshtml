@model CreateTeacherViewModel

<div class="container">
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Surname">Surname</label>
            <input asp-for="Surname" type="text" class="form-control" placeholder="Surname">
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DetailInformation">Detail information</label>
            <input asp-for="DetailInformation" type="text" class="form-control" placeholder="Detail information">
            <span asp-validation-for="DetailInformation" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age">Age</label>
            <input asp-for="Age" type="number" class="form-control" placeholder="Age">
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <select asp-for="CourseCategory" asp-items="@Html.GetEnumSelectList<CourseCategory>()" class="form-control form-control-lg">
            <option>--Select--</option>
        </select>
        <div class="form-group">
            <label asp-for="Address.Street">Street</label>
            <input asp-for="Address.Street" type="text" class="form-control" placeholder="Street">
            <span asp-validation-for="Address.Street" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.City">City</label>
            <input asp-for="Address.City" type="text" class="form-control" placeholder="City">
            <span asp-validation-for="Address.City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.State">State</label>
            <input asp-for="Address.State" type="text" class="form-control" placeholder="State">
            <span asp-validation-for="Address.State" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image">Image</label>
            <input asp-for="Image" type="file" class="form-control" placeholder="Image">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>